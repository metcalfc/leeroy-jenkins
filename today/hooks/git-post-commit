#!/usr/bin/env bash
#
# Leeroy - Git post-commit Hook
# Clears files after commit (prompts persist for multi-commit workflows)

set -euo pipefail

readonly SESSION_TRACKER="${HOME}/.leeroy/hooks/session-tracker.sh"

[[ -x "${SESSION_TRACKER}" ]] && "${SESSION_TRACKER}" clear-files 2>/dev/null || true

exit 0
